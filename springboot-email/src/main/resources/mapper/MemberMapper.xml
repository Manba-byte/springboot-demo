<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.bootemail.mapper.MemberMapper" >
  <resultMap id="BaseResultMap" type="com.example.bootemail.model.Member" >
    <result column="id" property="id" jdbcType="VARCHAR" />
    <result column="username" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="passWord" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="member_list">
      id,username,password,email
  </sql>

  <insert id="insert" parameterType="com.example.bootemail.model.Member" >
    insert into member (id, username, password, 
      email)
    values (#{id,jdbcType=VARCHAR}, #{userName,jdbcType=VARCHAR}, #{passWord,jdbcType=VARCHAR}, 
      #{email,jdbcType=VARCHAR})
  </insert>

  <insert id="insertSelective" parameterType="com.example.bootemail.model.Member" >
    insert into member
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="userName != null" >
        username,
      </if>
      <if test="passWord != null" >
        password,
      </if>
      <if test="email != null" >
        email,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=VARCHAR},
      </if>
      <if test="userName != null" >
        #{userName,jdbcType=VARCHAR},
      </if>
      <if test="passWord != null" >
        #{passWord,jdbcType=VARCHAR},
      </if>
      <if test="email != null" >
        #{email,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>

  <select id="findMemberById" resultMap="BaseResultMap" parameterType="int">
    select
      <include refid="member_list"/>
    from
      member
    where id = #{memberId}
  </select>
</mapper>